<?xml version='1.0' encoding='UTF-8'?>
<openerp>
	<data>
		<record model='ir.ui.view' id='wiz_pentaho_report_prompt_params'>
			<field name='name'>Pentaho Report Options with Stored Params</field>
			<field name='model'>ir.actions.report.promptwizard</field>
			<field name='inherit_id' ref='pentaho_reports.wiz_pentaho_report_prompt'/>
			<field name='arch' type='xml'>
				<group name='parameters' position='before'>
					<header>
						<button name="%(action_store_parameters)d" type="action" string="Store Parameters"/>
					</header>
				</group>
				<field name='report_action_id' position='after'>
					<field name='has_params' invisible='1'/>
					<field name='parameter_set_id' domain="[('report_action_id', '=', report_action_id)]" attrs="{'invisible': [('has_params', '!=', True)]}"
						on_change='onchange_parameter_set_id(parameter_set_id, parameters_dictionary, x2m_unique_id)'/>
				</field>
			</field>
		</record>
	</data>
</openerp>
